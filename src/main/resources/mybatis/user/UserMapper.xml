<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tuibei.mapper.user.UserMapper">

    <select id="getUserInfo" parameterType="com.tuibei.model.User" resultType="com.tuibei.model.User">

        select * from
        sdb_tuibei_user
        where 1=1
        <if test="phone !=null  and phone != '' ">
            and phone=#{phone}
        </if>
        <if test="openid !=null  and openid != '' ">
            and openid=#{openid}
        </if>
        <if test="unionid !=null  and unionid != '' ">
            and unionid=#{unionid}
        </if>
        <if test="invite_code !=null  and invite_code != '' ">
            and invite_code=#{invite_code}
        </if>
    </select>

</mapper>