<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tuibei.mapper.user.UserMapper">

    <select id="getUserInfo" parameterType="com.tuibei.model.User" resultType="com.tuibei.model.User">

        select * from
        sdb_tuibei_user
        where 1=1
        <if test="phone !=null  and phone != '' ">
            and phone=#{phone}
        </if>
        <if test="openid !=null  and openid != '' ">
            and openid=#{openid}
        </if>
        <if test="unionid !=null  and unionid != '' ">
            and unionid=#{unionid}
        </if>
        <if test="invite_code !=null  and invite_code != '' ">
            and invite_code=#{invite_code}
        </if>
    </select>


    <insert id="saveNewUser" parameterType="com.tuibei.model.User">
        <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
            select LAST_INSERT_ID()
        </selectKey>
        insert  into
        sdb_tuibei_user
        <trim prefix="(" suffix=")"  suffixOverrides=",">

            <if test="member_id != null  and member_id != '' ">
                member_id,
            </if>
            <if test="openid != null  and openid != '' ">
                openid,
            </if>
            <if test="unionid != null  and unionid != '' ">
                unionid,
            </if>
            <if test="nickname != null  and nickname != '' ">
                nickname,
            </if>
            <if test="headimgurl != null  and headimgurl != '' ">
                headimgurl,
            </if>
            <if test="sex != null  and sex != '' ">
                sex,
            </if>
            <if test="invite_code != null  and invite_code != '' ">
                invite_code,
            </if>
            <if test="origin != null  and origin != '' ">
                origin,
            </if>
            <if test="master != null  and master != '' ">
                master,
            </if>
            <if test="phone != null  and phone != '' ">
                phone,
            </if>
            <if test="password != null  and password != '' ">
                password,
            </if>
            <if test="time != null  and time != '' ">
                time,
            </if>
        </trim>

        <trim prefix="values(" suffix=")"  suffixOverrides=",">

            <if test="member_id != null  and member_id != '' ">
                #{member_id},
            </if>
            <if test="openid != null  and openid != '' ">
                #{openid},
            </if>
            <if test="unionid != null  and unionid != '' ">
                #{unionid},
            </if>
            <if test="nickname != null  and nickname != '' ">
                #{nickname},
            </if>
            <if test="headimgurl != null  and headimgurl != '' ">
                #{headimgurl},
            </if>
            <if test="sex != null  and sex != '' ">
                #{sex},
            </if>
            <if test="invite_code != null  and invite_code != '' ">
                #{invite_code},
            </if>
            <if test="origin != null  and origin != '' ">
                #{origin},
            </if>
            <if test="master != null  and master != '' ">
                #{master},
            </if>
            <if test="phone != null  and phone != '' ">
                #{phone},
            </if>
            <if test="password != null  and password != '' ">
                #{password},
            </if>
            <if test="time != null  and time != '' ">
                #{time},
            </if>

        </trim>


    </insert>

</mapper>